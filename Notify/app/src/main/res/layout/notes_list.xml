<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/notes_container"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="12dp">

<!-- Header Section (Title, Icons) -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">



    <!-- Archive Icon -->

    <!-- Title -->
    <ImageView
        android:id="@+id/icon_archive"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/imageView_pin"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="1dp"
        android:contentDescription="Archives"
        android:src="@drawable/ic_archive"

        app:tint="@color/grey" />

    <TextView
        android:id="@+id/textview_title"
        android:text="Title"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="@dimen/activity_vertical_margin"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <!-- Pin Icon -->
    <ImageView
        android:id="@+id/imageView_pin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_pin"
    android:contentDescription="Pinned"/>

</RelativeLayout>

<!-- Notes Content -->
<TextView
    android:id="@+id/textView_notes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Notes"
    android:textSize="14sp"
    android:textColor="@color/black"
    android:maxLines="3"
    android:ellipsize="end"
    android:paddingBottom="8dp"/>

<!-- Date Section -->
<TextView
    android:id="@+id/textView_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Date"
    android:textSize="12sp"
    android:textColor="@color/grey"
    android:singleLine="true"
    android:ellipsize="end"/>

    <!-- Favourite Icon -->
    <ImageView
        android:id="@+id/icon_favourite"
        android:layout_width="374dp"
        android:layout_height="20dp"
        android:layout_marginEnd="60dp"
        android:contentDescription="Favourites"
        android:src="@drawable/ic_star"
        app:tint="@color/gold" />
</LinearLayout>
    </androidx.cardview.widget.CardView>